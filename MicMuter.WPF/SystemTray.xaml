<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MicMuter.WPF"
                    xmlns:tb="http://www.hardcodet.net/taskbar">
    
    <ContextMenu x:Shared="false" x:Key="SysTrayMenu">
        <MenuItem Header="Toggle Sound Output" Command="{Binding ToggleStatusSoundOutput}" />
        <Separator />
        <MenuItem Header="Exit" Command="{Binding ExitApplication}" />
    </ContextMenu>


    <tb:TaskbarIcon x:Key="TaskBarIcon"
        ToolTipText="MicMuter"
        LeftClickCommand="{Binding ToggleMicrophone}"
        LeftClickCommandParameter="{Binding PlaySounds}"
        IconSource="{Binding StatusIconPath}"
        ContextMenu="{StaticResource SysTrayMenu}">
        <tb:TaskbarIcon.DataContext>
            <local:SystemTrayViewModel />
        </tb:TaskbarIcon.DataContext>
    </tb:TaskbarIcon>
</ResourceDictionary>